<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission voor API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Location permissions voor Maps -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Camera and Storage permissions voor foto uploads -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- Audio permissions voor calls -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Raptor"
        android:hardwareAccelerated="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">
        
        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDHeGBqSsjBYOrEEQydgXxAIlGeqpR4Km8" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        
        <!-- Auth Activities -->
        <activity
            android:name=".ui.auth.CustomerRegisterActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        
        <!-- Order Activities -->
        <activity
            android:name=".ui.orders.CreateOrderActivity"
            android:exported="false"
            android:parentActivityName=".ui.orders.OrderListActivity" />
        <activity
            android:name=".ui.orders.OrderListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.orders.OrderDetailActivity"
            android:exported="false"
            android:parentActivityName=".ui.orders.OrderListActivity" />
        <activity
            android:name=".ui.orders.TipDriverActivity"
            android:exported="false"
            android:parentActivityName=".ui.orders.OrderDetailActivity" />
        <activity
            android:name=".ui.orders.DriverReviewActivity"
            android:exported="false" />
        
        <!-- Chat Activity -->
        <activity
            android:name=".ui.chat.OrderChatActivity"
            android:exported="false"
            android:parentActivityName=".ui.orders.OrderDetailActivity" />
        
        <!-- Profile Activities -->
        <activity
            android:name=".ui.profile.CustomerProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="false"
            android:parentActivityName=".ui.profile.CustomerProfileActivity" />
        <activity
            android:name=".ui.profile.ChangePasswordActivity"
            android:exported="false"
            android:parentActivityName=".ui.profile.CustomerProfileActivity" />
        
        <!-- Map Activity -->
        <activity
            android:name=".ui.map.CustomerMapActivity"
            android:exported="false"
            android:parentActivityName=".ui.orders.OrderDetailActivity" />
        
        <!-- Dashboard Activity -->
        <activity
            android:name=".ui.dashboard.CustomerDashboardActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        
        <!-- Settings Activities -->
        <activity
            android:name=".ui.settings.LoginSecurityActivity"
            android:exported="false"
            android:parentActivityName=".ui.dashboard.CustomerDashboardActivity" />
        <activity
            android:name=".ui.settings.PrivacyActivity"
            android:exported="false"
            android:parentActivityName=".ui.dashboard.CustomerDashboardActivity" />
        <activity
            android:name=".ui.settings.HelpActivity"
            android:exported="false"
            android:parentActivityName=".ui.dashboard.CustomerDashboardActivity" />
        <activity
            android:name=".ui.settings.AboutActivity"
            android:exported="false"
            android:parentActivityName=".ui.dashboard.CustomerDashboardActivity" />
        
        <!-- Order History Activity -->
        <activity
            android:name=".ui.orders.OrderHistoryActivity"
            android:exported="false"
            android:parentActivityName=".ui.dashboard.CustomerDashboardActivity" />
        
        <!-- Payment Activity -->
        <activity
            android:name=".ui.payment.PaymentActivity"
            android:exported="false"
            android:parentActivityName=".ui.orders.CreateOrderActivity" />
        
        <!-- Schedule Picker Activity -->
        <activity
            android:name=".ui.orders.SchedulePickerActivity"
            android:exported="false"
            android:parentActivityName=".ui.orders.CreateOrderActivity" />
        
        <!-- Add Partner Activity -->
        <activity
            android:name=".ui.partners.AddPartnerActivity"
            android:exported="false"
            android:parentActivityName=".ui.partners.PartnerSelectionActivity" />
        
        <!-- Partner Selection Activity -->
        <activity
            android:name=".ui.partners.PartnerSelectionActivity"
            android:exported="false"
            android:parentActivityName=".ui.orders.CreateOrderActivity" />
        
        <!-- Forgot Password Activity -->
        <activity
            android:name=".ui.auth.ForgotPasswordActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        
        <!-- Call Activity -->
        <activity
            android:name=".ui.call.CallActivity"
            android:exported="false"
            android:parentActivityName=".ui.orders.OrderDetailActivity" />
        
        <!-- Quick Order Activity -->
        <activity
            android:name=".ui.orders.QuickOrderActivity"
            android:exported="false"
            android:parentActivityName=".ui.dashboard.CustomerDashboardActivity" />
    </application>

</manifest>