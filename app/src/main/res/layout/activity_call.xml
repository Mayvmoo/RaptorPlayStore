<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/call_background_gradient">

    <!-- Top Section with receiver info -->
    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Receiver Avatar -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp">

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/call_avatar_background" />

            <TextView
                android:id="@+id/receiverInitialText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="?"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </FrameLayout>

        <!-- Receiver Name -->
        <TextView
            android:id="@+id/receiverNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Onbekend"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Call State -->
        <TextView
            android:id="@+id/callStateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verbinden..."
            android:textSize="16sp"
            android:textColor="@color/white_opacity_80" />

        <!-- Duration -->
        <TextView
            android:id="@+id/durationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="18sp"
            android:textColor="@color/gold"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/connectedControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="40dp"
        android:paddingHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Mute Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/muteButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_lock"
                android:background="@drawable/call_button_background"
                android:tint="@color/white"
                android:padding="16dp"
                android:contentDescription="Mute" />

            <TextView
                android:id="@+id/muteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mute"
                android:textSize="12sp"
                android:textColor="@color/white_opacity_80"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- End Call Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/endCallButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@android:drawable/ic_menu_call"
                android:background="@drawable/call_end_button_background"
                android:tint="@color/white"
                android:padding="18dp"
                android:rotation="135"
                android:contentDescription="Ophangen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BeÃ«indigen"
                android:textSize="12sp"
                android:textColor="@color/white_opacity_80"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Speaker Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/speakerButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/ic_btn_speak_now"
                android:background="@drawable/call_button_background"
                android:tint="@color/white"
                android:padding="16dp"
                android:contentDescription="Speaker" />

            <TextView
                android:id="@+id/speakerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speaker"
                android:textSize="12sp"
                android:textColor="@color/white_opacity_80"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

