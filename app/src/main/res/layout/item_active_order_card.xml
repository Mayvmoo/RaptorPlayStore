<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Driver Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Driver Icon -->
            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/driver_icon_background"
                android:gravity="center">

                <ImageView
                    android:id="@+id/driverVehicleIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_view"
                    android:tint="@color/primary_blue"
                    android:contentDescription="Vehicle" />

            </FrameLayout>

            <!-- Driver Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/driverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan de Bezorger"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Onderweg naar jou"
                    android:textColor="@color/white_opacity_60"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

                <!-- Time and Distance -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@android:drawable/ic_menu_recent_history"
                            android:tint="@color/gold"
                            android:contentDescription="Time" />

                        <TextView
                            android:id="@+id/estimatedTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 min"
                            android:textColor="@color/white_opacity_60"
                            android:textSize="10sp"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginStart="12dp">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@android:drawable/ic_menu_mylocation"
                            android:tint="@color/primary_blue"
                            android:contentDescription="Distance" />

                        <TextView
                            android:id="@+id/estimatedDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 km"
                            android:textColor="@color/white_opacity_60"
                            android:textSize="10sp"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Status Badge -->
            <LinearLayout
                android:id="@+id/statusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/status_badge_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp">

                <View
                    android:id="@+id/statusIndicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/status_indicator"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Geaccepteerd"
                    android:textColor="@color/primary_blue"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_opacity_30"
            android:layout_marginVertical="12dp" />

        <!-- Order Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Order ID -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@android:drawable/ic_menu_view"
                    android:tint="@color/white_opacity_60"
                    android:contentDescription="Order ID" />

                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order #12345678"
                    android:textColor="@color/white_opacity_60"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Destination -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    android:tint="@color/primary_blue"
                    android:contentDescription="Destination"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bestemming"
                        android:textColor="@color/white_opacity_60"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/destinationAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoofdstraat 456, Amsterdam"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_opacity_30"
            android:layout_marginVertical="12dp" />

        <!-- Driver Contact & Security Code -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bezorger"
                    android:textColor="@color/white_opacity_60"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/driverNameFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan de Bezorger"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Phone/Chat Button -->
            <ImageButton
                android:id="@+id/chatButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@android:drawable/ic_menu_call"
                android:background="@drawable/chat_button_background"
                android:contentDescription="Chat"
                android:scaleType="centerInside"
                android:padding="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

