<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hidden Registration Fields (for compatibility) -->
    <EditText
        android:id="@+id/contactNameEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/companyNameEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/phoneNumberEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <RadioGroup
        android:id="@+id/customerTypeRadioGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/radioBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radioIndividual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
</merge>

