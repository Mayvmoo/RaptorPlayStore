<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Annuleren"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nieuwe Partner"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_menu_add"
                    android:background="@drawable/schedule_icon_background"
                    android:padding="10dp"
                    android:contentDescription="Partner toevoegen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partner Toevoegen"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

            <!-- Form Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/schedule_card_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <!-- Partner Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mailadres partner"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/partnerEmailInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="partner@example.nl"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/input_field_light"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Partner Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Naam contactpersoon"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/partnerNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Naam"
                    android:inputType="textPersonName"
                    android:background="@drawable/input_field_light"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Partner Company -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bedrijfsnaam"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/partnerCompanyInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Bedrijfsnaam"
                    android:inputType="textCapWords"
                    android:background="@drawable/input_field_light"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Partner Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adres (optioneel)"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/partnerAddressInput"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Adres"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:background="@drawable/input_field_light"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Add Partner Button -->
            <Button
                android:id="@+id/addPartnerButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_primary_enabled"
                android:elevation="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ProgressBar
                        android:id="@+id/buttonProgress"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/white"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_input_add"
                            android:tint="@color/white"
                            android:contentDescription="Add" />

                        <TextView
                            android:id="@+id/buttonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Partner Toevoegen"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </FrameLayout>

            </Button>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

