<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background_gradient"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context=".ui.SplashActivity">

    <!-- Main VStack container -->
    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo container with glow and circle -->
        <FrameLayout
            android:id="@+id/logoContainer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="30dp">

            <!-- Glow effect circle (animated) -->
            <View
                android:id="@+id/glowCircle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/splash_glow_circle"
                android:alpha="0.6" />

            <!-- Main logo circle with gradient -->
            <View
                android:id="@+id/logoCircle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/splash_logo_circle_gradient"
                android:elevation="20dp" />

            <!-- Bird icon - centered in the circle -->
            <ImageView
                android:id="@+id/birdIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_bird"
                android:contentDescription="Raptor Bird Icon"
                android:alpha="0" />

        </FrameLayout>

        <!-- App name and subtitle container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="30dp">

            <!-- RAPTOR text with gradient effect -->
            <TextView
                android:id="@+id/appNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAPTOR"
                android:textSize="42sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-rounded"
                android:textColor="@color/white"
                android:alpha="0"
                android:layout_marginBottom="8dp" />

            <!-- Bezorgservice subtitle -->
            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bezorgservice"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/splash_white_opacity_80"
                android:alpha="0" />

        </LinearLayout>

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/loadingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/white"
            android:alpha="0"
            android:scaleX="1.2"
            android:scaleY="1.2" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

