<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forgot_password_gradient">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wachtwoord Reset"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center" />

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@color/white"
            android:contentDescription="Sluiten"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Form Container -->
            <LinearLayout
                android:id="@+id/formContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <!-- Key Icon -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_lock"
                    android:background="@drawable/forgot_password_icon_background"
                    android:padding="15dp"
                    android:tint="@color/white"
                    android:contentDescription="Sleutel"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="30dp" />

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voer je e-mailadres in en we sturen je een link om je wachtwoord te resetten."
                    android:textSize="16sp"
                    android:textColor="@color/white_opacity_90"
                    android:gravity="center"
                    android:layout_marginBottom="30dp" />

                <!-- Email Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-mailadres"
                    android:textSize="14sp"
                    android:textColor="@color/white_opacity_90"
                    android:layout_marginBottom="8dp" />

                <!-- Email Input -->
                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:hint="jouw@email.nl"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_opacity_60"
                    android:background="@drawable/input_field_background"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp" />

                <!-- Reset Button -->
                <Button
                    android:id="@+id/resetButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/button_primary_enabled"
                    android:elevation="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ProgressBar
                            android:id="@+id/resetButtonProgress"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:indeterminateTint="@color/white"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_send"
                                android:tint="@color/white"
                                android:contentDescription="Verstuur" />

                            <TextView
                                android:id="@+id/resetButtonText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Verstuur Reset Link"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                    </FrameLayout>

                </Button>

            </LinearLayout>

            <!-- Success Container (hidden by default) -->
            <LinearLayout
                android:id="@+id/successContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center"
                android:visibility="gone">

                <!-- Success Icon -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:tint="@color/light_gold"
                    android:contentDescription="Succes"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="20dp" />

                <!-- Success Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset Link Verzonden"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp" />

                <!-- Success Message -->
                <TextView
                    android:id="@+id/successEmailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We hebben een wachtwoord reset link gestuurd naar:"
                    android:textSize="16sp"
                    android:textColor="@color/white_opacity_80"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <!-- Additional Info -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Controleer je inbox en volg de instructies in de email."
                    android:textSize="14sp"
                    android:textColor="@color/white_opacity_70"
                    android:gravity="center"
                    android:layout_marginBottom="30dp" />

                <!-- Close Button -->
                <Button
                    android:id="@+id/closeSuccessButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Sluiten"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/button_primary_enabled"
                    android:textAllCaps="false" />

            </LinearLayout>

        </FrameLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

