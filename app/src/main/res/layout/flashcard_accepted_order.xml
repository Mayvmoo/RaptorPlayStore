<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="#E6000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Success Icon -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/flashcard_success_circle">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_recent_history"
                android:tint="@color/gold"
                android:contentDescription="Success" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/flashcardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Bestelling Geaccepteerd!"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/flashcardSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Je bestelling wordt nu bezorgd"
            android:textColor="@color/white_opacity_80"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Driver Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:background="@drawable/flashcard_info_background">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:tint="@color/gold"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bezorger"
                    android:textColor="@color/white_opacity_80"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/flashcardDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan de Bezorger"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Destination Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:background="@drawable/flashcard_info_background">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_mylocation"
                android:tint="@color/primary_blue"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bestemming"
                    android:textColor="@color/white_opacity_80"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/flashcardDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoofdstraat 456, Amsterdam"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/flashcardViewDetailsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Details bekijken"
                android:textColor="@color/white"
                android:background="@drawable/button_primary_enabled"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/flashcardDismissButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sluiten"
                android:textColor="@color/white_opacity_80"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

