<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Map View (background) -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Flashcard Container (for accepted orders) -->
    <FrameLayout
        android:id="@+id/flashcardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:visibility="gone" />

    <!-- Overlay Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <!-- Loading State -->
        <androidx.cardview.widget.CardView
            android:id="@+id/loadingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#E6000000"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp">

                <ProgressBar
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminateTint="@color/gold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bezorgers laden..."
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Error State -->
        <androidx.cardview.widget.CardView
            android:id="@+id/errorContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#E6000000"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_dialog_alert"
                android:tint="@color/gold"
                android:contentDescription="Error"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/errorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fout bij laden"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white_opacity_80"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:gravity="center" />

            <Button
                android:id="@+id/retryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opnieuw proberen"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_primary_enabled" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Empty State -->
        <androidx.cardview.widget.CardView
            android:id="@+id/emptyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#E6000000"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_view"
                android:tint="@color/white_opacity_60"
                android:contentDescription="Empty"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geen actieve bezorgers"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Er zijn momenteel geen actieve fiets- of scooterbezorgers beschikbaar."
                android:textColor="@color/white_opacity_80"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Order Cards Container -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/orderCardsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Active Order Card (will be added dynamically) -->
                <FrameLayout
                    android:id="@+id/activeOrderCardContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <!-- Active Orders Bottom Sheet -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/activeOrdersBottomSheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Handle bar -->
                        <View
                            android:layout_width="40dp"
                            android:layout_height="5dp"
                            android:background="@drawable/bottom_sheet_handle"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp" />

                        <!-- Active Orders Widget -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingBottom="12dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@android:drawable/ic_menu_view"
                                    android:tint="@color/primary_blue"
                                    android:contentDescription="Orders" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Actieve Bestellingen"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="8dp" />

                                <!-- Order count badge with new orders indicator -->
                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp">

                                    <TextView
                                        android:id="@+id/activeOrdersCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:background="@drawable/badge_background"
                                        android:paddingHorizontal="8dp"
                                        android:paddingVertical="4dp"
                                        android:visibility="gone" />

                                    <!-- New orders indicator (red dot) -->
                                    <View
                                        android:id="@+id/newOrdersIndicator"
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:layout_gravity="top|end"
                                        android:background="@drawable/new_orders_indicator"
                                        android:visibility="gone" />

                                </FrameLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1" />

                                <!-- Order count badge (removed "Bekijk alle" - now in hamburger menu) -->

                            </LinearLayout>

                            <!-- Orders List (will be populated dynamically) -->
                            <LinearLayout
                                android:id="@+id/activeOrdersList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" />

                            <!-- Empty State for Orders (Create Order Button) -->
                            <include
                                android:id="@+id/emptyOrdersContainer"
                                layout="@layout/create_order_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

